{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      // sources
      "*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "enums/*": ["./src/enums/*"],
      "references/*": ["./src/references/*"],
      "views/*": ["./src/views/*"],
      // resources
      "fonts/*": ["./fonts/*"],
      "images/*": ["./images/*"],
      "styles/*": ["./styles/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "./types/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.vue"
  ]
}
